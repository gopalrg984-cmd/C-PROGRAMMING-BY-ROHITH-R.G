#include <stdio.h>
#include <string.h>

int main() {
    char str[50];
    int i, len, flag = 0;

    printf("Enter a string: ");
    scanf("%s", str);

    len = strlen(str);

    for (i = 0; i < len / 2; i++) {
        if (str[i] != str[len - 1 - i]) {
            flag = 1;
            break;
        }
    }

    if (flag == 0)
        printf("It is a palindrome string\n");
    else
        printf("It is NOT a palindrome string\n");

    return 0;
}
