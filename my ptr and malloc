#include <stdio.h>
#include <stdlib.h>
int main() {
    int *ptr;
    int n, i;
    ptr = (int *)malloc(7 * sizeof(int));
    if (ptr == NULL) {
        printf("Memory not allocated!\n");
        return 0;
    }
    printf("Memory allocated successfully.\n");
    for (i = 0; i < 7; i++) {
        printf("Enter element %d: ", i + 1);
        scanf("%d", &ptr[i]);
    }
    printf("\nEntered elements: ");
    for (i = 0; i <7; i++) {
        printf("%d ", ptr[i]);
    }
    free(ptr);
}
