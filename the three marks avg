#include <stdio.h>

int checkPass(int a, int b, int c) {
    if(a >= 40 && b >= 40 && c >= 40)
        return 1;
    return 0;
}

int main() {
    int s1, s2, s3;
    float avg;

    printf("Enter marks in three subjects: ");
    scanf("%d %d %d", &s1, &s2, &s3);

    avg = (s1 + s2 + s3) / 3.0;

    printf("Average: %.2f\n", avg);

    if(checkPass(s1, s2, s3))
        printf("Status: PASS");
    else
        printf("Status: FAIL");

    return 0;
}
