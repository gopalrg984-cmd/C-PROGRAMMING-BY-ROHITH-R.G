#include<stdio.h>
    int sicalculator()
    {
    int p,t,r,si;
    printf("enter the value of principal:\n");
    scanf("%d",&p);
    printf("enter the number of years:\n");
    scanf("%d",&t);
    printf("enter the rate of interest:\n");
    scanf("%d",&r);
    si=(p*t*r)/100;
    printf("the simple interest is: %d\n",si);
}
    int main(){
        sicalculator();
       
    }
